@model DomainModel.Converter

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Converter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ConvertId" />
            <div class="form-group">
                <label asp-for="TypeOfConvert" class="control-label"></label>
                <input asp-for="TypeOfConvert" class="form-control" />
                <span asp-validation-for="TypeOfConvert" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumbertoConvert" class="control-label"></label>
                <input asp-for="NumbertoConvert" class="form-control" />
                <span asp-validation-for="NumbertoConvert" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberConverted" class="control-label"></label>
                <input asp-for="NumberConverted" class="form-control" />
                <span asp-validation-for="NumberConverted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
