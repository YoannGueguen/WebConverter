@{
    ViewData["Title"] = "Index";
}

<form action="Page de traitement" method="post">
    <header>Converteur</header>
    <div class="row">
        <label class="col-lg-2">Kilomètre to miles :</label>
        <input class="col-lg-2 col-lg-offset-1" type="text" name="KilometerTo" />
        <input class="col-lg-2 col-lg-offset-1" type="text" name="ToMiles" disabled="disabled" />
        <button class="btn btn-info col-lg-2  col-lg-offset-1" type="submit">Convertir</button>
    </div>

    <div class="row">
        <label class="col-lg-2">Miles to kilomètre :</label>
        <input class="col-lg-2 col-lg-offset-1" type="text" name="MilesTo" />
        <input class="col-lg-2 col-lg-offset-1" type="text" name="ToKilometer" disabled="disabled" />
        <button class="btn btn-info col-lg-2  col-lg-offset-1" type="submit" >Convertir</button>
    </div>
</form>